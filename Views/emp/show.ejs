<!DOCTYPE html>
<html>
<head>
	<title>Home</title>
	<div align="right">
	<h1><a href="/logout">logout</a><h1>
	</div>

</head>
<body>
	<h1 align="center">List of Employers!</h1>

	<a href="/admin">Back</a>
	
	<table border="1" align="center">
		<tr>
			<th>Id</th>
			<th>Company Name</th>
			<th>Job Title</th>
			<th>Job Location</th>
			<th>Salary</th>
		</tr>
		<% for(var i = 0; i < list.length; i++){ %>

		<tr>
			<td><%= list[i].id %></td>
			<td><%= list[i].company_name %></td>
			<td><%= list[i].job_title %></td>
			<td><%= list[i].job_location %></td>
			<td><%= list[i].salary %></td>
			<td><a href="/admin/edit/<%= list[i].id %>">Edit</a> | <a href="/admin/delete/<%= list[i].id %>"> Delete</a> </td>
		</tr>
		
		<% } %>

	</table>
</body>
</html>